{
  "name": "eptrc",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "check": "bunx tsc --noEmit --skipLibCheck",
    "db:push": "bunx --bun drizzle-kit push",
    "build:bun": "bun build src/index.ts --target=bun --production --outdir=dist",
    "build:linux-x64": "bun build src/index.ts --target bun-linux-x64-modern --production --compile --minify --sourcemap --bytecode --outfile dist/${npm_package_name}-linux-x64",
    "build:windows-x64": "bun build src/index.ts --target bun-windows-x64-modern --production --compile --minify --sourcemap --bytecode --outfile dist/${npm_package_name}-windows-x64",
    "build:darwin-x64": "bun build src/index.ts --target bun-darwin-x64-modern --production --compile --minify --sourcemap --bytecode --outfile dist/${npm_package_name}-darwin-x64",
    "build:darwin-arm64": "bun build src/index.ts --target bun-darwin-arm64-modern --production --compile --minify --sourcemap --bytecode --outfile dist/${npm_package_name}-darwin-arm64"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "drizzle-orm": "^1.0.0-beta.15-859cf75",
    "hono": "^4.11.9",
    "tronweb": "^6.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "drizzle-kit": "^1.0.0-beta.15-859cf75"
  }
}